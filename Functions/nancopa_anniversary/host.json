{
    "version": "2.0",
    "logging": {
        "applicationInsights": {
            "samplingSettings": {
                "isEnabled": true,
                "excludedTypes": "Request"
            },
            "enableLiveMetricsFilters": true
        }
    },
    "extensions": {
        "http": {
            "routePrefix": "api"
        }
    },
    "host": {
        "CORS": {
            "supportCredentials": false,
            "allowedOrigins": [ "*" ],
            "allowedMethods": [ "GET", "POST", "OPTIONS" ],
            "allowedHeaders": [ "Content-Type", "Authorization" ]
        }
    }
}